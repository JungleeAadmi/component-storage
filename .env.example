# Server Configuration
NODE_ENV=production
PORT=3210
HOST=0.0.0.0

# Database
DATABASE_PATH=/opt/component-storage/data/components.db

# Uploads
UPLOAD_DIR=/opt/component-storage/uploads
MAX_FILE_SIZE=5242880

# Backup
BACKUP_DIR=/opt/component-storage/backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_HOUR=0
BACKUP_MINUTE=0

# Application
APP_NAME=Component Storage
APP_URL=http://localhost:3210
